{
    "singleQuote": true,
    "arrowParens": "always",
    "bracketSpacing": true,
    "semi": true,
    "trailingComma": "es5",
    "singleAttributePerLine": true,
    "importOrder": [
        "react$",
        "^[a-zA-Z]",
        "^@(.*)$",
        "^\\$(.*)$",
        "<THIRD_PARTY_MODULES>"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "parser": "typescript",
    "filepath": "./src/*",
    "plugins": [
        "@trivago/prettier-plugin-sort-imports"
    ],
    "overrides": [
        {
            "files": [
                "**/*.html"
            ],
            "options": {
                "parser": "html"
            }
        },
        {
            "files": [
                "**/*.css"
            ],
            "options": {
                "parser": "css"
            }
        }
    ]
}